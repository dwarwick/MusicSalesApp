@page "/verify-email"
@inherits VerifyEmailModel

<PageTitle>Verify Email</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <SfCard>
                <CardHeader Title="Email Verification" />
                <CardContent>
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Verifying your email...</p>
                        </div>
                    }
                    else if (isSuccess)
                    {
                        <SfMessage Severity="MessageSeverity.Success">
                            <h4>Email Verified!</h4>
                            <p>Your email has been successfully verified. You now have full access to the site.</p>
                            <hr />
                            <SfButton OnClick="@(() => NavigationManager.NavigateTo("/login"))" IsPrimary="true" Content="Go to Login" CssClass="e-btn e-primary" />
                        </SfMessage>
                    }
                    else
                    {
                        <SfMessage Severity="MessageSeverity.Error">
                            <h4>Verification Failed</h4>
                            <p>@errorMessage</p>
                            <hr />
                            <p class="mb-0">
                                <SfButton OnClick="@(() => NavigationManager.NavigateTo("/register"))" IsPrimary="true" Content="Go to Register Page" CssClass="e-btn e-primary" /> to request a new verification email.
                            </p>
                        </SfMessage>
                    }
                </CardContent>
            </SfCard>
        </div>
    </div>
</div>
