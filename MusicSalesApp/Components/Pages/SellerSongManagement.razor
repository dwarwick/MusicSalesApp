@page "/seller/songs"
@inherits SellerSongManagementModel
@using Microsoft.AspNetCore.Authorization
@using MusicSalesApp.Common.Helpers
@using MusicSalesApp.Models
@attribute [Authorize(Policy = Permissions.ManageOwnSongs)]

<PageTitle>My Songs - Seller Dashboard</PageTitle>

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="bi bi-music-note-list me-2"></i>My Songs</h3>
            <p class="text-muted mb-0">Manage your uploaded music</p>
        </div>
        <div>
            <SfButton CssClass="e-success" OnClick="NavigateToUpload">
                <i class="bi bi-cloud-upload me-1"></i> Upload New Music
            </SfButton>
        </div>
    </div>

    @if (_loading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading your songs...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @_errorMessage
        </div>
    }
    else if (!_songs.Any())
    {
        <div class="text-center my-5">
            <i class="bi bi-music-note-beamed display-1 text-muted"></i>
            <h4 class="mt-3">No songs yet</h4>
            <p class="text-muted">You haven't uploaded any music yet. Click the button below to get started!</p>
            <SfButton CssClass="e-success" OnClick="NavigateToUpload">
                <i class="bi bi-cloud-upload me-1"></i> Upload Your First Song
            </SfButton>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @_successMessage
                <button type="button" class="btn-close" @onclick="() => _successMessage = string.Empty"></button>
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Songs</h5>
                        <h2 class="mb-0">@_songs.Count(s => !s.IsAlbum)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Albums</h5>
                        <h2 class="mb-0">@_songs.Where(s => s.IsAlbum).Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Value</h5>
                        <h2 class="mb-0">$@(_songs.Where(s => !s.IsAlbum).Sum(s => s.SongPrice ?? 0).ToString("F2"))</h2>
                    </div>
                </div>
            </div>
        </div>

        <SfGrid @ref="_grid" 
                TValue="SongAdminViewModel"
                DataSource="@_songs"
                AllowPaging="true" 
                AllowSorting="true" 
                AllowFiltering="true"
                Height="400px">
            <GridPageSettings PageSize="10"></GridPageSettings>
            <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel"></GridFilterSettings>
            <GridColumns>
                <GridColumn HeaderText="Actions" Width="150" AllowFiltering="false" AllowSorting="false">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            <div class="btn-group" role="group">
                                <SfButton OnClick="() => EditSong(song)" CssClass="e-btn e-small e-info" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </SfButton>
                                <SfButton OnClick="() => ShowDeleteConfirmation(song)" CssClass="e-btn e-small e-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </SfButton>
                            </div>
                        }
                    </Template>
                </GridColumn>
                <GridColumn HeaderText="Cover" Width="100" AllowFiltering="false">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            var imageUrl = !string.IsNullOrEmpty(song.SongImageUrl) ? song.SongImageUrl : song.AlbumCoverImageUrl;
                            if (!string.IsNullOrEmpty(imageUrl))
                            {
                                <img src="@imageUrl" alt="Cover" class="img-thumbnail" style="max-width: 60px; max-height: 60px;" />
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.SongTitle)" HeaderText="Title" Width="200"></GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.AlbumName)" HeaderText="Album" Width="150"></GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.Genre)" HeaderText="Genre" Width="100"></GridColumn>
                <GridColumn HeaderText="Type" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.IsAlbum)
                            {
                                <span class="badge bg-success">Album</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Song</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn HeaderText="Price" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            var price = song.IsAlbum ? song.AlbumPrice : song.SongPrice;
                            if (price.HasValue)
                            {
                                <span>$@price.Value.ToString("F2")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.TrackNumber)" HeaderText="Track #" Width="80"></GridColumn>
                <GridColumn HeaderText="Duration" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.TrackLength.HasValue)
                            {
                                var ts = TimeSpan.FromSeconds(song.TrackLength.Value);
                                <span>@(ts.Hours > 0 ? ts.ToString(@"h\:mm\:ss") : ts.ToString(@"m\:ss"))</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
            </GridColumns>
        </SfGrid>
    }
</div>

<!-- Delete Confirmation Dialog -->
<SfDialog @bind-Visible="_showDeleteDialog" Width="400px" IsModal="true" ShowCloseIcon="true">
    <DialogTemplates>
        <Header>Delete Song</Header>
        <Content>
            @if (_songToDelete != null)
            {
                <div class="text-center">
                    <i class="bi bi-exclamation-triangle-fill text-warning display-4 mb-3"></i>
                    <p>Are you sure you want to delete "<strong>@_songToDelete.SongTitle</strong>"?</p>
                    <p class="text-danger"><strong>Warning:</strong> This action cannot be undone!</p>
                    <p class="text-muted small">
                        The song will be removed from the platform and any users who purchased it will no longer have access to it.
                    </p>
                </div>
            }
        </Content>
        <FooterTemplate>
            <SfButton CssClass="e-secondary" Content="Cancel" OnClick="CancelDelete" />
            <SfButton CssClass="e-danger" Content="Delete" OnClick="ConfirmDelete" Disabled="@_isDeleting">
                @if (_isDeleting)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                }
                Delete
            </SfButton>
        </FooterTemplate>
    </DialogTemplates>
</SfDialog>

<!-- Edit Dialog (similar to admin but simplified) -->
<SfDialog @bind-Visible="_showEditDialog" Width="600px" IsModal="true" ShowCloseIcon="true">
    <DialogTemplates>
        <Header>Edit Song Details</Header>
        <Content>
            @if (_editingSong != null)
            {
                <div class="p-3">
                    @if (_validationErrors.Any())
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in _validationErrors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Song Title (Read-only)</label>
                        <SfTextBox Value="@_editingSong.SongTitle" Enabled="false" CssClass="e-outline" />
                    </div>

                    @if (!_editingSong.IsAlbum)
                    {
                        <div class="mb-3">
                            <label class="form-label">Song Price <span class="text-danger">*</span></label>
                            <SfNumericTextBox @bind-Value="_editSongPrice" Format="C2" CssClass="e-outline" Min="0.01m" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Genre <span class="text-danger">*</span></label>
                            <SfDropDownList TValue="string" TItem="string" @bind-Value="_editGenre" 
                                          DataSource="@(new List<string> { "Rock", "Country", "Pop", "Jazz", "Classical", "Electronic", "Hip-Hop", "R&B" })"
                                          CssClass="e-outline">
                            </SfDropDownList>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">Album Price <span class="text-danger">*</span></label>
                            <SfNumericTextBox @bind-Value="_editAlbumPrice" Format="C2" CssClass="e-outline" Min="0.01m" />
                        </div>
                    }
                </div>
            }
        </Content>
        <FooterTemplate>
            <SfButton CssClass="e-secondary" Content="Cancel" OnClick="CancelEdit" />
            <SfButton CssClass="e-primary" Content="Save Changes" OnClick="SaveEdit" Disabled="@_isSaving">
                @if (_isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                }
                Save Changes
            </SfButton>
        </FooterTemplate>
    </DialogTemplates>
</SfDialog>
