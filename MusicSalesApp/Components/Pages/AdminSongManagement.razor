@page "/admin/songs"
@inherits AdminSongManagementModel
@using Microsoft.AspNetCore.Authorization
@using MusicSalesApp.Common.Helpers
@using MusicSalesApp.Models
@using MusicSalesApp.Services
@attribute [Authorize(Policy = Permissions.ManageUsers)]

<PageTitle>Song Management</PageTitle>

<style>
    /* Hide accessibility helper text in grid headers */
    .e-grid .e-headercelldiv .e-sortfilterdiv .e-icons::after,
    .e-grid .e-headertext::after,
    .e-grid .e-headercelldiv::after {
        content: none !important;
        display: none !important;
    }
    
    /* Hide ARIA labels that appear as visible text */
    .e-grid .e-headercell .e-aria-label {
        display: none !important;
    }
</style>

<h3>Song Management</h3>

@if (_isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading songs...</p>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @_errorMessage
    </div>
}
else
{
    <div class="container-fluid">
        <!-- Syncfusion Data Grid -->
        <SfGrid @ref="_grid" 
                TValue="SongAdminViewModel"
                DataSource="@_currentPageSongs"
                AllowPaging="true" 
                AllowSorting="true" 
                AllowFiltering="true"
                Height="600"
                EnableAdaptiveUI="false"
                RowRenderingMode="Syncfusion.Blazor.Grids.RowDirection.Horizontal">
            <GridPageSettings PageSize="10" PageCount="@_totalPages"></GridPageSettings>
            <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel"></GridFilterSettings>
            <GridEvents TValue="SongAdminViewModel" OnActionBegin="OnActionBegin"></GridEvents>
            <GridColumns>
                <GridColumn HeaderText="Action" Width="100" AllowFiltering="false" AllowSorting="false">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            <button class="btn btn-sm btn-primary" @onclick="() => EditSong(song)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        }
                    </Template>
                </GridColumn>
                <GridColumn HeaderText="Song Image" Width="120" Field="@nameof(SongAdminViewModel.SongImageUrl)" AllowFiltering="false">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (!song.IsAlbum)
                            {
                                if (!string.IsNullOrEmpty(song.SongImageUrl))
                                {
                                    <img src="@song.SongImageUrl" alt="Song cover" class="img-thumbnail" style="max-width: 80px; max-height: 80px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn HeaderText="Album Cover" Width="120" Field="@nameof(SongAdminViewModel.AlbumCoverImageUrl)" AllowFiltering="false">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.IsAlbum)
                            {
                                if (!string.IsNullOrEmpty(song.AlbumCoverImageUrl))
                                {
                                    <img src="@song.AlbumCoverImageUrl" alt="Album cover" class="img-thumbnail" style="max-width: 80px; max-height: 80px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.IsAlbum)" HeaderText="Album" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.IsAlbum)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.AlbumName)" HeaderText="Album Name" Width="150"></GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.SongTitle)" HeaderText="Song Title" Width="150"></GridColumn>
                <GridColumn HeaderText="MP3 Blob Path" Width="200" Field="@nameof(SongAdminViewModel.Mp3FileName)">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (!string.IsNullOrEmpty(song.Mp3FileName))
                            {
                                <small class="text-break">@song.Mp3FileName</small>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn HeaderText="Image Blob Path" Width="200" Field="@nameof(SongAdminViewModel.JpegFileName)">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            var imagePath = song.IsAlbum ? song.AlbumCoverBlobName : song.JpegFileName;
                            if (!string.IsNullOrEmpty(imagePath))
                            {
                                <small class="text-break">@imagePath</small>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.AlbumPrice)" HeaderText="Album Price" Width="120">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.AlbumPrice.HasValue)
                            {
                                <span>$@song.AlbumPrice.Value.ToString("F2")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.SongPrice)" HeaderText="Song Price" Width="120">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.SongPrice.HasValue)
                            {
                                <span>$@song.SongPrice.Value.ToString("F2")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.Genre)" HeaderText="Genre" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            <span>@(string.IsNullOrEmpty(song.Genre) ? "-" : song.Genre)</span>
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.TrackNumber)" HeaderText="Track #" Width="100">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.TrackNumber.HasValue)
                            {
                                <span>@song.TrackNumber.Value</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(SongAdminViewModel.TrackLength)" HeaderText="Track Length" Width="120">
                    <Template>
                        @{
                            var song = (context as SongAdminViewModel);
                            if (song.TrackLength.HasValue)
                            {
                                var ts = TimeSpan.FromSeconds(song.TrackLength.Value);
                                <span>@(ts.Hours > 0 ? ts.ToString(@"h\:mm\:ss") : ts.ToString(@"m\:ss"))</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        }
                    </Template>
                </GridColumn>
            </GridColumns>
        </SfGrid>

        <div class="mt-3">
            <p class="text-muted">Total: @_totalCount songs/albums</p>
        </div>
    </div>
}

<!-- Edit Modal -->
@if (_showEditModal && _editingSong != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Song Details</h5>
                    <button type="button" class="btn-close" @onclick="CancelEdit" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (_validationErrors.Any())
                    {
                        <div class="alert alert-danger">
                            <strong>Validation Errors:</strong>
                            <ul>
                                @foreach (var error in _validationErrors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">MP3 Filename</label>
                            <input type="text" class="form-control" value="@_editingSong.Mp3FileName" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">JPEG Filename</label>
                            <input type="text" class="form-control" value="@_editingSong.JpegFileName" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Album (True/False)</label>
                            <input type="text" class="form-control" value="@(_editingSong.IsAlbum ? "True" : "False")" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Album Name</label>
                            <input type="text" class="form-control" value="@_editingSong.AlbumName" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label">Song Title</label>
                            <input type="text" class="form-control" value="@_editingSong.SongTitle" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="form-label">Album Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" class="form-control" @bind="_editAlbumPrice" disabled="@(!_editingSong.IsAlbum)" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Song Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" class="form-control" @bind="_editSongPrice" disabled="@(_editingSong.IsAlbum)" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Genre <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_editGenre" disabled="@(_editingSong.IsAlbum)">
                                <option value="">-- Select Genre --</option>
                                <option value="Rock">Rock</option>
                                <option value="Country">Country</option>
                                <option value="Pop">Pop</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Track # @(_editingSong.IsAlbum ? "*" : "")</label>
                            <input type="number" class="form-control" @bind="_editTrackNumber" disabled="@(_editingSong.IsAlbum || string.IsNullOrEmpty(_editingSong.AlbumName))" 
                                   placeholder="@(_editingSong.IsAlbum ? "Required" : "N/A")" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label">Track Length (Read-only)</label>
                            @if (_editingSong.TrackLength.HasValue)
                            {
                                var ts = TimeSpan.FromSeconds(_editingSong.TrackLength.Value);
                                <input type="text" class="form-control" value="@(ts.Hours > 0 ? ts.ToString(@"h\:mm\:ss") : ts.ToString(@"m\:ss"))" disabled />
                            }
                            else
                            {
                                <input type="text" class="form-control" value="Not available" disabled />
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Song Cover Image</label>
                            @if (!_editingSong.IsAlbum)
                            {
                                @if (!string.IsNullOrEmpty(_editingSong.SongImageUrl))
                                {
                                    <div class="mb-2">
                                        <img src="@_editingSong.SongImageUrl" alt="Current song cover" class="img-thumbnail" style="max-width: 200px;" />
                                    </div>
                                }
                                <InputFile OnChange="HandleSongImageUpload" accept=".jpeg,.jpg" class="form-control" />
                                <small class="text-muted">Upload a new song cover image (JPEG only)</small>
                                @if (_songImageFile != null)
                                {
                                    <div class="mt-2 text-success">
                                        <i class="bi bi-check-circle"></i> New file selected: @_songImageFile.Name
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">N/A (Album entries don't have song covers)</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Album Cover Image</label>
                            @if (_editingSong.IsAlbum)
                            {
                                @if (!string.IsNullOrEmpty(_editingSong.AlbumCoverImageUrl))
                                {
                                    <div class="mb-2">
                                        <img src="@_editingSong.AlbumCoverImageUrl" alt="Current album cover" class="img-thumbnail" style="max-width: 200px;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning mb-2">No album cover found</div>
                                }
                                <InputFile OnChange="HandleAlbumImageUpload" accept=".jpeg,.jpg" class="form-control" />
                                <small class="text-muted">Upload a new album cover image (JPEG only)</small>
                                @if (_albumImageFile != null)
                                {
                                    <div class="mt-2 text-success">
                                        <i class="bi bi-check-circle"></i> New file selected: @_albumImageFile.Name
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">N/A (Not an album)</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveEdit" disabled="@_isSaving">
                        @if (_isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                        }
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}
