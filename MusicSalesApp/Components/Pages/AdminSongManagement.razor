@page "/admin/songs"
@inherits AdminSongManagementModel
@using Microsoft.AspNetCore.Authorization
@using MusicSalesApp.Common.Helpers
@using MusicSalesApp.Models
@attribute [Authorize(Policy = Permissions.ManageUsers)]

<PageTitle>Song Management</PageTitle>

<h3>Song Management</h3>

@if (_isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading songs...</p>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @_errorMessage
    </div>
}
else
{
    <div class="container-fluid">
        <!-- Filters -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label">Filter by Album Name</label>
                <input type="text" class="form-control" @bind="_filterAlbumName" @bind:event="oninput" placeholder="Enter album name..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Song Title</label>
                <input type="text" class="form-control" @bind="_filterSongTitle" @bind:event="oninput" placeholder="Enter song title..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Filter by Genre</label>
                <select class="form-select" @bind="_filterGenre">
                    <option value="">All</option>
                    <option value="Rock">Rock</option>
                    <option value="Country">Country</option>
                    <option value="Pop">Pop</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Filter by Type</label>
                <select class="form-select" @bind="_filterType">
                    <option value="">All</option>
                    <option value="album">Albums</option>
                    <option value="song">Songs</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-secondary w-100" @onclick="ClearFilters">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            </div>
        </div>

        <!-- Data Grid -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 80px;">Action</th>
                        <th style="width: 100px; cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.SongTitle))">
                            Song Image @GetSortIcon(nameof(SongAdminViewModel.SongTitle))
                        </th>
                        <th style="width: 100px; cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.AlbumName))">
                            Album Cover @GetSortIcon(nameof(SongAdminViewModel.AlbumName))
                        </th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.IsAlbum))">
                            Album @GetSortIcon(nameof(SongAdminViewModel.IsAlbum))
                        </th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.AlbumName))">
                            Album Name @GetSortIcon(nameof(SongAdminViewModel.AlbumName))
                        </th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.SongTitle))">
                            Song Title @GetSortIcon(nameof(SongAdminViewModel.SongTitle))
                        </th>
                        <th>MP3 Filename</th>
                        <th>JPEG Filename</th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.AlbumPrice))">
                            Album Price @GetSortIcon(nameof(SongAdminViewModel.AlbumPrice))
                        </th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.SongPrice))">
                            Song Price @GetSortIcon(nameof(SongAdminViewModel.SongPrice))
                        </th>
                        <th style="cursor: pointer;" @onclick="() => SortBy(nameof(SongAdminViewModel.Genre))">
                            Genre @GetSortIcon(nameof(SongAdminViewModel.Genre))
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (!_filteredSongs.Any())
                    {
                        <tr>
                            <td colspan="11" class="text-center">No songs found matching the filters.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var song in _filteredSongs)
                        {
                            <tr>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => EditSong(song)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(song.SongImageUrl))
                                    {
                                        <img src="@song.SongImageUrl" alt="Song cover" class="img-thumbnail" style="max-width: 80px; max-height: 80px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(song.AlbumCoverImageUrl))
                                    {
                                        <img src="@song.AlbumCoverImageUrl" alt="Album cover" class="img-thumbnail" style="max-width: 80px; max-height: 80px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (song.IsAlbum)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td>@song.AlbumName</td>
                                <td>@song.SongTitle</td>
                                <td><small>@song.Mp3FileName</small></td>
                                <td><small>@song.JpegFileName</small></td>
                                <td>
                                    @if (song.AlbumPrice.HasValue)
                                    {
                                        <span>$@song.AlbumPrice.Value.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (song.SongPrice.HasValue)
                                    {
                                        <span>$@song.SongPrice.Value.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(string.IsNullOrEmpty(song.Genre) ? "-" : song.Genre)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total: @_filteredSongs.Count() songs/albums</p>
        </div>
    </div>
}

<!-- Edit Modal -->
@if (_showEditModal && _editingSong != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Song Details</h5>
                    <button type="button" class="btn-close" @onclick="CancelEdit" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (_validationErrors.Any())
                    {
                        <div class="alert alert-danger">
                            <strong>Validation Errors:</strong>
                            <ul>
                                @foreach (var error in _validationErrors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">MP3 Filename</label>
                            <input type="text" class="form-control" value="@_editingSong.Mp3FileName" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">JPEG Filename</label>
                            <input type="text" class="form-control" value="@_editingSong.JpegFileName" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Album (True/False)</label>
                            <input type="text" class="form-control" value="@_editingSong.IsAlbum" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Album Name</label>
                            <input type="text" class="form-control" value="@_editingSong.AlbumName" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label">Song Title</label>
                            <input type="text" class="form-control" value="@_editingSong.SongTitle" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Album Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" class="form-control" @bind="_editAlbumPrice" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Song Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" class="form-control" @bind="_editSongPrice" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Genre <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_editGenre">
                                <option value="">-- Select Genre --</option>
                                <option value="Rock">Rock</option>
                                <option value="Country">Country</option>
                                <option value="Pop">Pop</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Song Cover Image</label>
                            @if (!string.IsNullOrEmpty(_editingSong.SongImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@_editingSong.SongImageUrl" alt="Current song cover" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            }
                            <InputFile OnChange="HandleSongImageUpload" accept=".jpeg,.jpg" class="form-control" />
                            <small class="text-muted">Upload a new song cover image (JPEG only)</small>
                            @if (_songImageFile != null)
                            {
                                <div class="mt-2 text-success">
                                    <i class="bi bi-check-circle"></i> New file selected: @_songImageFile.Name
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Album Cover Image</label>
                            @if (!string.IsNullOrEmpty(_editingSong.AlbumCoverImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@_editingSong.AlbumCoverImageUrl" alt="Current album cover" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            }
                            else if (_editingSong.IsAlbum)
                            {
                                <div class="alert alert-warning mb-2">No album cover found</div>
                            }
                            @if (!string.IsNullOrEmpty(_editingSong.AlbumName))
                            {
                                <InputFile OnChange="HandleAlbumImageUpload" accept=".jpeg,.jpg" class="form-control" />
                                <small class="text-muted">Upload a new album cover image (JPEG only)</small>
                                @if (_albumImageFile != null)
                                {
                                    <div class="mt-2 text-success">
                                        <i class="bi bi-check-circle"></i> New file selected: @_albumImageFile.Name
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">N/A (Not part of an album)</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveEdit" disabled="@_isSaving">
                        @if (_isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                        }
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .table th[style*="cursor: pointer"]:hover {
        background-color: #f0f0f0;
    }
</style>
