@page "/upload-files"
@inherits MusicSalesApp.Components.Pages.UploadFilesModel
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using MusicSalesApp.Common.Helpers
@using MusicSalesApp.Services
@attribute [Authorize(Policy = Permissions.UploadFiles)]

<PageTitle>Upload Music Files</PageTitle>

@if (_isAlbumCoverUploadMode)
{
    <h3>Upload Album Cover for "@_pendingAlbumName"</h3>

    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <strong>Instructions:</strong> Upload the album cover image for the album "@_pendingAlbumName".
                    This image will be marked as the main album cover with IsAlbumCover = true.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="upload-zone">
                    <div class="upload-zone-content">
                        <i class="bi bi-image" style="font-size: 3rem;"></i>
                        <p class="mt-3">Select album cover image to upload</p>
                        <InputFile OnChange="HandleAlbumCoverFileSelected" multiple class="dropzone" accept=".jpeg,.jpg" />
                        <p class="text-muted mt-2">Album cover formats: JPEG, JPG</p>
                    </div>
                </div>
            </div>
        </div>

        @if (_uploadItems.Any())
        {
            <div class="row mt-4">
                <div class="col-12">
                    <h5>Album Cover Upload Progress</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>File Name</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in _uploadItems)
                                {
                                    <tr>
                                        <td>@item.AlbumArtFileName</td>
                                        <td>@FormatFileSize(item.AlbumArtFileSize)</td>
                                        <td>
                                            @if (item.Status == UploadStatus.Uploading)
                                            {
                                                <span class="badge bg-info">@item.StatusMessage</span>
                                            }
                                            else if (item.Status == UploadStatus.Completed)
                                            {
                                                <span class="badge bg-success">@item.StatusMessage</span>
                                            }
                                            else if (item.Status == UploadStatus.Failed)
                                            {
                                                <span class="badge bg-danger">@item.StatusMessage</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.StatusMessage</span>
                                            }
                                        </td>
                                        <td style="width: 30%;">
                                            <div class="progress">
                                                <div class="progress-bar @GetProgressBarClass(item.Status)"
                                                     role="progressbar"
                                                     style="width: @(item.Progress)%"
                                                     aria-valuenow="@item.Progress"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                    @item.Progress%
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(item.ErrorMessage))
                                            {
                                                <small class="text-danger">@item.ErrorMessage</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-3">
            <div class="col-12">
                <button class="btn btn-secondary" @onclick="FinishAlbumCoverUpload">
                    <i class="bi bi-arrow-left"></i> Back to Music Upload
                </button>
            </div>
        </div>
    </div>
}
else
{
    <h3>Upload Music Files with Album Art</h3>

    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <strong>Instructions:</strong> Upload MP3 files paired with their album art (JPEG). 
                    Each MP3 file must have a matching album art file with the same base name.
                    For example: <code>Lipstick and Leather_mastered.mp3</code> pairs with <code>Lipstick and Leather.jpeg</code>.
                    The "_mastered" suffix will be removed automatically.
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="albumName" class="form-label"><strong>Album Name (Optional)</strong></label>
                <input type="text" class="form-control" id="albumName" placeholder="Enter album name"
                       @bind="_albumName" @bind:event="oninput" />
                <small class="text-muted">If provided, the album name will be stored as metadata on uploaded files.</small>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="upload-zone">
                    <div class="upload-zone-content">
                        <i class="bi bi-cloud-upload" style="font-size: 3rem;"></i>
                        <p class="mt-3">Select audio files and album art to upload</p>
                        <InputFile OnChange="HandleFileSelected" multiple class="dropzone" accept=".mp3,.wav,.flac,.ogg,.m4a,.aac,.wma,.jpeg,.jpg" />
                        <p class="text-muted mt-2">Audio formats: MP3, WAV, FLAC, OGG, M4A, AAC, WMA</p>
                        <p class="text-muted">Album art formats: JPEG</p>
                        <p class="text-muted">Each audio file must have a matching album art file with the same base name</p>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(_validationErrorMessage))
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Validation Error:</strong> @_validationErrorMessage
                        <button type="button" class="btn-close" @onclick="ClearValidationError" aria-label="Close"></button>
                    </div>
                    @if (_unmatchedMp3Files.Any())
                    {
                        <p class="text-danger"><strong>Unmatched audio files (missing album art):</strong></p>
                        <ul class="text-danger">
                            @foreach (var file in _unmatchedMp3Files)
                            {
                                <li>@file</li>
                            }
                        </ul>
                    }
                    @if (_unmatchedAlbumArtFiles.Any())
                    {
                        <p class="text-danger"><strong>Unmatched album art files (missing audio):</strong></p>
                        <ul class="text-danger">
                            @foreach (var file in _unmatchedAlbumArtFiles)
                            {
                                <li>@file</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        }

        @if (_showAlbumCoverPrompt)
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-success">
                        <h5><i class="bi bi-check-circle"></i> Music files uploaded successfully!</h5>
                        <p>Would you like to upload an album cover image for the album "<strong>@_albumName</strong>"?</p>
                        <p class="text-muted">The album cover will be stored with IsAlbumCover = true metadata.</p>
                        <div class="mt-2">
                            <button class="btn btn-primary me-2" @onclick="StartAlbumCoverUpload">
                                <i class="bi bi-image"></i> Upload Album Cover
                            </button>
                            <button class="btn btn-secondary" @onclick="SkipAlbumCoverUpload">
                                Skip
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (_uploadItems.Any())
        {
            <div class="row mt-4">
                <div class="col-12">
                    <h5>Upload Progress</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>File Pair</th>
                                    <th>Audio File</th>
                                    <th>Album Art</th>
                                    <th>Status</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in _uploadItems)
                                {
                                    <tr>
                                        <td>@item.BaseName</td>
                                        <td>@item.AudioFileName<br /><small class="text-muted">@FormatFileSize(item.AudioFileSize)</small></td>
                                        <td>@item.AlbumArtFileName<br /><small class="text-muted">@FormatFileSize(item.AlbumArtFileSize)</small></td>
                                        <td>
                                            @if (item.Status == UploadStatus.Uploading || item.Status == UploadStatus.Converting)
                                            {
                                                <span class="badge bg-info">@item.StatusMessage</span>
                                            }
                                            else if (item.Status == UploadStatus.Completed)
                                            {
                                                <span class="badge bg-success">@item.StatusMessage</span>
                                            }
                                            else if (item.Status == UploadStatus.Failed)
                                            {
                                                <span class="badge bg-danger">@item.StatusMessage</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.StatusMessage</span>
                                            }
                                        </td>
                                        <td style="width: 30%;">
                                            <div class="progress">
                                                <div class="progress-bar @GetProgressBarClass(item.Status)" 
                                                     role="progressbar" 
                                                     style="width: @(item.Progress)%"
                                                     aria-valuenow="@item.Progress" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @item.Progress%
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(item.ErrorMessage))
                                            {
                                                <small class="text-danger">@item.ErrorMessage</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .upload-zone {
        border: 3px dashed #ccc;
        border-radius: 8px;
        padding: 60px 20px;
        text-align: center;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
    }

    .upload-zone:hover {
        border-color: #0d6efd;
        background-color: #f0f8ff;
    }

    .upload-zone i {
        color: #0d6efd;
    }

    .dropzone {
        display: block;
        width: 100%;
        height: 220px;
        border: 2px dashed #bbb;
        border-radius: 8px;
        text-align: center;
        padding: 40px;
    }

    .dropzone:hover {
        border-color: #888;
    }
</style>
